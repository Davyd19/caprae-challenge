<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Caprae Lead Scraper</title>
    <!-- Memuat Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Animasi untuk spinner */
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        .loader {
            border-top-color: #2dd4bf; /* Teal color from the site's gradient */
            animation: spin 1s linear infinite;
        }
    </style>
</head>
<body class="bg-[#1A2133] text-gray-200 antialiased">
    <div class="container mx-auto max-w-5xl p-4 sm:p-6 lg:p-8">
        
        <!-- Header -->
        <header class="text-center mb-10">
            <h1 class="text-4xl sm:text-5xl font-bold text-white mb-2">Company Finder</h1>
            <p class="text-gray-400">Advanced Lead Generation & Enrichment Tool</p>
        </header>

        <!-- Form Pencarian -->
        <div class="bg-[#2A3349] border border-[#3A4562] p-6 rounded-lg shadow-2xl mb-8">
            <form id="scrape-form" action="/scrape" method="POST" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div>
                        <label for="industry" class="block text-sm font-medium text-gray-300 mb-1">Industry</label>
                        <input
                            type="text"
                            id="industry"
                            name="industry"
                            placeholder="e.g., Software"
                            required
                            class="w-full bg-gray-700 text-white placeholder-gray-500 border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500"
                        />
                    </div>
                    <div>
                        <label for="country" class="block text-sm font-medium text-gray-300 mb-1">Country</label>
                        <input
                            type="text"
                            id="country"
                            name="country"
                            placeholder="e.g., United States"
                            required
                            class="w-full bg-gray-700 text-white placeholder-gray-500 border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500"
                        />
                    </div>
                    <div>
                        <label for="city" class="block text-sm font-medium text-gray-300 mb-1">City / State</label>
                        <input
                            type="text"
                            id="city"
                            name="city"
                            placeholder="e.g., California"
                            required
                            class="w-full bg-gray-700 text-white placeholder-gray-500 border border-gray-600 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-500"
                        />
                    </div>
                </div>
                <button 
                    id="submit-button"
                    type="submit" 
                    class="w-full bg-gradient-to-r from-teal-500 to-blue-500 hover:from-teal-600 hover:to-blue-600 text-white font-bold py-3 px-4 rounded-md transition duration-300 ease-in-out flex items-center justify-center disabled:opacity-70 disabled:cursor-not-allowed">
                    <span id="button-text">Find Companies</span>
                </button>
            </form>
        </div>

        <!-- Indikator Loading & Hasil -->
        <div id="status-container">
            <!-- Loading Indicator -->
            <div id="loading-indicator" class="hidden text-center my-12">
                <div class="loader ease-linear rounded-full border-4 border-t-4 border-gray-600 h-12 w-12 mx-auto mb-4"></div>
                <p class="text-lg text-gray-300">Scraping in progress... This may take a moment.</p>
                <p class="text-sm text-gray-500">Enriching data from company websites.</p>
            </div>

            <!-- Results Container -->
            <div id="results-container">
                <% if (typeof results !== 'undefined' && results) { %>
                    <h2 class="text-2xl font-semibold text-white mb-4">Scraping Results</h2>
                    <% if (results.length > 0) { %>
                        <div class="overflow-x-auto bg-[#2A3349] border border-[#3A4562] rounded-lg shadow-2xl">
                            <table class="w-full text-sm text-left text-gray-300">
                                <thead class="text-xs text-gray-200 uppercase bg-gray-700/50">
                                    <tr>
                                        <th scope="col" class="px-6 py-3">Company Name</th>
                                        <th scope="col" class="px-6 py-3">Website</th>
                                        <th scope="col" class="px-6 py-3">Social Media</th>
                                        <th scope="col" class="px-6 py-3">Technologies</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% results.forEach(company => { %>
                                        <tr class="border-b border-gray-700 hover:bg-gray-800/50">
                                            <td class="px-6 py-4 font-medium text-white"><%= company.name %></td>
                                            <td class="px-6 py-4">
                                                <a href="<%= company.website %>" target="_blank" class="text-teal-400 hover:underline">Visit Site</a>
                                            </td>
                                            <td class="px-6 py-4">
                                                <% if (company.social && Object.keys(company.social).length > 0) { %>
                                                    <% for (const [platform, link] of Object.entries(company.social)) { %>
                                                        <a href="<%= link %>" target="_blank" class="capitalize text-blue-400 hover:underline"><%= platform %></a><br>
                                                    <% } %>
                                                <% } else { %>
                                                    <span class="text-gray-500">N/A</span>
                                                <% } %>
                                            </td>
                                            <td class="px-6 py-4">
                                                <% if (company.technologies && company.technologies.length > 0) { %>
                                                    <div class="flex flex-wrap gap-1">
                                                    <% company.technologies.forEach(tech => { %>
                                                        <span class="bg-gray-600 text-gray-200 text-xs font-semibold px-2.5 py-0.5 rounded"><%= tech %></span>
                                                    <% }) %>
                                                    </div>
                                                <% } else { %>
                                                    <span class="text-gray-500">N/A</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="bg-[#2A3349] border border-[#3A4562] text-center p-6 rounded-lg shadow-2xl">
                            <p class="text-gray-400">No results found or an error occurred. Please try a different query.</p>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        const form = document.getElementById('scrape-form');
        const loadingIndicator = document.getElementById('loading-indicator');
        const resultsContainer = document.getElementById('results-container');
        const submitButton = document.getElementById('submit-button');
        const buttonText = document.getElementById('button-text');

        form.addEventListener('submit', () => {
            resultsContainer.style.display = 'none';
            loadingIndicator.classList.remove('hidden');
            submitButton.disabled = true;
            buttonText.innerText = 'Scraping...';
        });
    </script>
</body>
</html>
