<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Caprae Enhanced Scraper</title>
    <style>
        :root {
            --background-color: #1a1a1a;
            --surface-color: #2c2c2c;
            --primary-color: #4a90e2;
            --text-color: #e0e0e0;
            --border-color: #444;
            --font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }
        body {
            font-family: var(--font-family);
            background-color: var(--background-color);
            color: var(--text-color);
            margin: 0;
            padding: 2rem;
            display: flex;
            justify-content: center;
            align-items: flex-start;
        }
        .container {
            width: 100%;
            max-width: 900px;
        }
        .card {
            background: var(--surface-color);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
        h1, h2 {
            margin-top: 0;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 0.5rem;
        }
        form {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
        .form-group {
            display: flex;
            flex-direction: column;
        }
        .full-width {
            grid-column: 1 / -1;
        }
        label {
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            font-weight: 500;
        }
        input[type="text"] {
            background-color: #333;
            color: var(--text-color);
            border: 1px solid var(--border-color);
            border-radius: 4px;
            padding: 0.8em;
            font-size: 1rem;
        }
        button {
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 4px;
            padding: 0.9em 1.2em;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            transition: background-color 0.2s;
        }
        button:hover { background-color: #357abd; }
        .results-table { width: 100%; border-collapse: collapse; }
        .results-table th, .results-table td {
            padding: 0.8em 1em;
            border: 1px solid var(--border-color);
            text-align: left;
        }
        .results-table th { background-color: #333; }
        a { color: var(--primary-color); text-decoration: none; }
        .loader {
            text-align: center;
            padding: 2rem;
        }
        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid var(--primary-color);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem;
        }
        @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <h1>Enhanced Lead Scraper</h1>
            <form action="/scrape" method="POST" id="scrapeForm">
                <div class="form-group">
                    <label for="industry">Industry</label>
                    <input type="text" id="industry" name="industry" placeholder="e.g., CRM" required>
                </div>
                <div class="form-group">
                    <label for="country">Country</label>
                    <input type="text" id="country" name="country" placeholder="e.g., United States" required>
                </div>
                <div class="form-group">
                    <label for="city">City / State</label>
                    <input type="text" id="city" name="city" placeholder="e.g., California" required>
                </div>
                <div class="form-group full-width">
                    <button type="submit">Scrape Leads</button>
                </div>
            </form>
        </div>

        <% if (loading) { %>
            <div class="card" id="results-card">
                <h2>Scraping in Progress...</h2>
                <div class="loader">
                    <div class="spinner"></div>
                    <p>Please wait while we gather the data. This may take a moment.</p>
                </div>
            </div>
        <% } else if (typeof results !== 'undefined' && results !== null) { %>
            <div class="card" id="results-card">
                <h2>Scraping Results</h2>
                <% if (results.length > 0) { %>
                    <table class="results-table">
                        <thead>
                            <tr>
                                <th>Company</th>
                                <th>Website</th>
                                <th>Location</th>
                                <th>Social Media</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% results.forEach(company => { %>
                                <tr>
                                    <td><%= company.name %></td>
                                    <td><a href="<%= company.website %>" target="_blank">Visit</a></td>
                                    <td><%= company.location %></td>
                                    <td>
                                        <% for (const [platform, link] of Object.entries(company.social)) { %>
                                            <a href="<%= link %>" target="_blank"><%= platform.charAt(0).toUpperCase() + platform.slice(1) %></a><br>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>No results found for your query.</p>
                <% } %>
            </div>
        <% } %>
    </div>
    <script>
        const form = document.getElementById('scrapeForm');
        const resultsCard = document.getElementById('results-card');
        form.addEventListener('submit', () => {
            // Sembunyikan hasil lama dan tampilkan loader jika ada
            if(resultsCard) {
                resultsCard.style.display = 'none';
            }
            const loaderHtml = `
            <div class="card" id="loading-card">
                <h2>Scraping in Progress...</h2>
                <div class="loader">
                    <div class="spinner"></div>
                    <p>Please wait while we gather the data. This may take a moment.</p>
                </div>
            </div>`;
            form.insertAdjacentHTML('afterend', loaderHtml);
        });
    </script>
</body>
</html>